<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">
    <LinearLayout
        android:id="@+id/ll_apply_usernmae"
        android:layout_width="match_parent"

        android:layout_height="wrap_content">
        <TextView
            android:text="注册帐号"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/et_apply_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="申请帐号"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_apply_password"
        android:layout_width="match_parent"

        android:layout_height="wrap_content">
        <TextView
            android:text="密码"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/et_apply_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="密码"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_apply_repassword"
        android:layout_width="match_parent"

        android:layout_height="wrap_content">
        <TextView
            android:text="验证密码"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/et_apply_repassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="密码"/>
    </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btn_commit_rogister"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content"
        android:text="提交"/>
</RelativeLayout>